<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/events_list_item_padding">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp"
        android:id="@+id/events_list_item_container">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:padding="@dimen/table_layout_padding">
                <TableRow
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tw_name"
                        android:layout_column="1"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tw_start_time"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:gravity="right"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/margin_between_card_view_items">
                    <TextView
                        android:id="@+id/tw_place"
                        android:layout_column="1"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/tw_end_time"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:gravity="right"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
